<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>register</title>
    <link rel="stylesheet" href="{{style}}">
</head>
<body>
<div class="wrapper fadeInDown">

    <div id="formContent">
        {{#if alertmessage}}
            <div class="alert">
                {{alertmessage}}
            </div>
        {{/if}}
        {{#if successmessage}}
            <div class="success">
                {{successmessage}}
            </div>
        {{/if}}
        <!-- Tabs Titles -->
        <a class="inactive underlineHover" href="login" > Login </a>
        <a class="active">Register </a>

        <!-- Login Form -->
        <form action="/auth/register" method="POST">
            <input type="text" class="fadeIn second" id="name" name="name" placeholder="Name" required>
            <input type="email" class="fadeIn third" id="email" name="email" placeholder="Email"  required>
            <input type="password" class="fadeIn third" id="password" name="password" placeholder="Password" required>
            <input type="password" class="fadeIn third" id="passwordconfirm" name="passwordconfirm" placeholder="Passwordconfirm" required>
            <input type="submit" class="fadeIn fourth" value="Log In">
        </form>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

</body>
</html>